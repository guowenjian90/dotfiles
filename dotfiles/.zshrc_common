# tell me git branch
git_prompt() {
  if git rev-parse --git-dir > /dev/null 2>&1; then
    ref=$(git symbolic-ref HEAD | cut -d'/' -f3,4,5)
    echo "[$ref]"
  else
    echo ''
    # this is not a git repository
  fi
}

