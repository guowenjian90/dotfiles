function s:quit_window()
  let wnum = winnr('$')
  if wnum == 1
    exe 'bd'
  else
    exe 'q'
  endif
endfunction

function Imapdw()
  let pos = col('.')
  let len = strlen(getline('.'))
  if len == pos
    call feedkeys("\<Right>")
    call feedkeys("\<C-o>dw")
  else
    call feedkeys("\<C-o>dw")
  endif
endf
imap <C-v> <C-o>v
imap <C-j> <Down>
imap <C-k> <Up>
imap <C-l> <Right>
imap <C-h> <Left>
imap <C-a> <C-o>^
imap <C-e> <C-o>$
" imap <C-d> <C-o>d$
" imap <silent><expr> <C-l> pumvisible() ? "\<Esc>a" : "\<Right>"
" imap <silent><expr> <C-h> pumvisible() ? "\<Esc>a" : "\<Left>"
" imap <C-^> <Esc><C-^>
imap <C-v> <Esc><C-v>
imap <C-z> <C-o>u
imap <M-l> <C-o>W
imap <M-h> <C-o>B
imap <C-d> <C-o>:call Imapdw()<CR>

